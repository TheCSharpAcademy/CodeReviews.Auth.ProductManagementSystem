@page
@model ProductManagementSystems.tonyissa.Pages.Admin.IndexModel

@{
	ViewData["Title"] = "Admin portal";
}

@if (Model.Error == true)
{
    <div class="alert alert-danger">
        @Html.DisplayTextFor(model => model.ErrorMessage)
    </div>
}
else if (Model.Error == false)
{
    <div class="alert alert-success">
        @Html.DisplayTextFor(model => model.ErrorMessage)
    </div>
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].EmailConfirmed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.EmailConfirmed)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@user.Id">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

